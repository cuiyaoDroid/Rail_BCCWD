<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_login_logo" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_login_text"
            android:orientation="vertical"
            android:weightSum="2" >

            <EditText
                android:id="@+id/usr_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="用户名"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp" >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#C3C3C8" />

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp" >
            </EditText>
        </LinearLayout>

        <ImageButton
            android:id="@+id/login_btn"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_login_button"
            android:scaleType="fitCenter"
            android:src="@drawable/button" />

        <CheckBox
            android:id="@+id/save_check"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:button="@drawable/btn_check_bg"
            android:text="记住密码"
             android:layout_marginTop="5dp"
            android:textColor="#052F7B"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>